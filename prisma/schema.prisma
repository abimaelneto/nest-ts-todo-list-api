generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")

}

model ToDoList {
  id    String     @default(uuid()) @id
  title  String
  items ToDoItem[] @relation("ListItems")
}

model ToDoItem {
  id        String      @default(uuid()) @id
  title     String
  deadline DateTime
  done Boolean? @default(false)
  list    ToDoList    @relation("ListItems",fields: [listId], references: [id])
  listId  String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}
